<?xml version="1.0" encoding="utf-8"?>
<com.manuelpeinado.multichoiceadapter.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ivTimelineImage"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:paddingRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_launcher" />

            <com.netlynxtech.gdsfileupload.classes.TextViewPlus
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/ivTimelineImage"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:font="roboto.ttf" />

            <com.netlynxtech.gdsfileupload.classes.TextViewPlus
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvLocation"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/tvLocation"
                android:layout_below="@+id/tvLocation"
                android:gravity="right"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:font="roboto.ttf" />

            <com.netlynxtech.gdsfileupload.classes.TextViewPlus
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvTime"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/tvTime"
                android:layout_below="@+id/tvTime"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:font="roboto.ttf" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</com.manuelpeinado.multichoiceadapter.CheckableRelativeLayout>